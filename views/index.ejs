<!DOCTYPE html>
<html>

<head>
    <title>
        Movie List
    </title>
    <% include head %>
</head>

<body>
    <% include navbar %>

        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1>Now Playing</h1>
                </div>
                <div class="col-sm-12 col-lg-12 row">
                    <% for (let movie of movies) { %>
                        <div class="col-sm-4 col-md-3 poster">
                            <a href="/movie/<%= movie.id %>"><img src="<%= imageBaseUrl + movie.poster_path %>" /></a>
                        </div>
                        <% } %>
                </div>

                <!-- <div class="col-sm-12">
                 
                </div> -->
            </div>
        </div>
</body>

</html>